<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/primary_light"
    android:layout_height="match_parent"
    tools:context="com.canking.waveview.MainActivity"
    >

  <com.canking.waveview.WaveProgressView
      android:id="@+id/waterWaveView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="48dp"
      android:layout_centerHorizontal="true"
      />


  <LinearLayout
      android:id="@+id/start_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:paddingBottom="8dp"
      android:background="#FFFFFF"
      android:orientation="horizontal"
      >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="start"
        android:text="动态"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="stop"
        android:layout_weight="1"
        android:text="静态"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="progressUp"
        android:layout_weight="1"
        android:text="增加"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="progressDown"
        android:layout_weight="1"
        android:text="减少"
        />
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingBottom="8dp"
      android:layout_above="@id/start_layout"
      android:orientation="horizontal"
      android:background="#FFFFFF"
      android:paddingTop="8dp"
      >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="colorChange"
        android:text="颜色"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="colorTran"
        android:layout_weight="1"
        android:text="色变"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="progressSet"
        android:layout_weight="1"
        android:text="动画"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="progressDown"
        android:layout_weight="1"
        android:text="-"
        />
  </LinearLayout>


</RelativeLayout>
